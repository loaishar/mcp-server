# MCP Server Environment Configuration
# Copy this file to .env and configure your values

# ============================================================================
# REGISTRY AND DEPLOYMENT
# ============================================================================
REGISTRY=your-registry.com/
TAG=latest

# ============================================================================
# MCP SERVER CONFIGURATION
# ============================================================================
MCP_PORT=3333
MCP_HOST=0.0.0.0
LOG_LEVEL=INFO

# ============================================================================
# API KEYS AND CREDENTIALS
# ============================================================================

# GitHub API (for git MCP server)
GITHUB_TOKEN=your_github_token_here

# Supabase (if using supabase MCP server)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI API (if using AI-powered features)
OPENAI_API_KEY=your_openai_api_key

# Anthropic API (if using Claude features)
ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================================================
# BROWSER AUTOMATION
# ============================================================================

# Playwright Configuration
PLAYWRIGHT_BROWSERS_PATH=/home/mcp/.cache/ms-playwright
DISPLAY=:99

# Browser settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Redis (for caching and sessions)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# PostgreSQL (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/mcp_db

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# CORS Configuration
MCP_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
MCP_MAX_CONNECTIONS=100
MCP_TIMEOUT=30

# JWT Settings (if using authentication)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development mode
MCP_DEV_MODE=false
MCP_RELOAD=false
MCP_DEBUG=false

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/mcp_server.log

# ============================================================================
# DOCKER COMPOSE PROFILES
# ============================================================================

# Available profiles: default, full
# default: unified-mcp + mcp-nodejs
# full: all services including redis and nginx
COMPOSE_PROFILES=default

# ============================================================================
# NETWORKING
# ============================================================================

# External ports (change if you have conflicts)
UNIFIED_MCP_PORT=3333
PLAYWRIGHT_DEBUG_PORT=9229
PLAYWRIGHT_VISION_PORT=9323
GIT_SERVER_PORT=9324
MEMORY_SERVER_PORT=9325
REDIS_PORT=6379
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Makefile for MCP Server Project
# Provides common development and deployment tasks

.PHONY: help setup test clean build deploy docker-build docker-run lint format check install dev-install

# Default target
help:
	@echo "ðŸ› ï¸  MCP Server Development Commands"
	@echo "=================================="
	@echo ""
	@echo "ðŸ“¦ Setup & Installation:"
	@echo "  setup          - Complete environment setup"
	@echo "  install        - Install production dependencies"
	@echo "  dev-install    - Install development dependencies"
	@echo ""
	@echo "ðŸ§ª Testing & Quality:"
	@echo "  test           - Run all tests"
	@echo "  test-unit      - Run unit tests only"
	@echo "  test-integration - Run integration tests"
	@echo "  lint           - Run code linting"
	@echo "  format         - Format code with black"
	@echo "  check          - Run all quality checks"
	@echo ""
	@echo "ðŸ³ Docker:"
	@echo "  docker-build   - Build Docker images"
	@echo "  docker-run     - Run with Docker Compose"
	@echo "  docker-clean   - Clean Docker resources"
	@echo ""
	@echo "ðŸš€ Deployment:"
	@echo "  build          - Build for production"
	@echo "  deploy         - Deploy to production"
	@echo ""
	@echo "ðŸ§¹ Maintenance:"
	@echo "  clean          - Clean build artifacts"
	@echo "  clean-all      - Deep clean (includes cache)"
	@echo "  logs           - View server logs"

# Setup and Installation
setup:
	@echo "ðŸš€ Setting up MCP Server environment..."
	python scripts/setup/setup-environment.py

install:
	@echo "ðŸ“¦ Installing production dependencies..."
	pip install -r requirements.txt

dev-install: install
	@echo "ðŸ”§ Installing development dependencies..."
	pip install pytest pytest-cov black flake8 mypy

# Testing
test:
	@echo "ðŸ§ª Running all tests..."
	python -m pytest tests/ -v --cov=src --cov-report=html

test-unit:
	@echo "ðŸ§ª Running unit tests..."
	python -m pytest tests/test_mcp_connection.py -v

test-integration:
	@echo "ðŸ§ª Running integration tests..."
	python -m pytest tests/test_comprehensive.py -v

test-compliance:
	@echo "ðŸ§ª Running MCP compliance tests..."
	python -m pytest tests/test_mcp_compliance.py -v

# Code Quality
lint:
	@echo "ðŸ” Running code linting..."
	flake8 src/ tests/ --max-line-length=100 --ignore=E203,W503

format:
	@echo "âœ¨ Formatting code..."
	black src/ tests/ --line-length=100

type-check:
	@echo "ðŸ” Running type checking..."
	mypy src/ --ignore-missing-imports

check: lint type-check
	@echo "âœ… All quality checks completed"

# Docker
docker-build:
	@echo "ðŸ³ Building Docker images..."
	./scripts/deploy/build-docker.sh

docker-run:
	@echo "ðŸ³ Running with Docker Compose..."
	docker-compose -f docker/docker-compose.yml up

docker-clean:
	@echo "ðŸ§¹ Cleaning Docker resources..."
	docker-compose -f docker/docker-compose.yml down
	docker system prune -f

# Build and Deployment
build:
	@echo "ðŸ—ï¸  Building for production..."
	python -m py_compile src/server/unified_mcp_v2.py
	python -m py_compile src/client/mcp_client.py

deploy: build test
	@echo "ðŸš€ Deploying to production..."
	./scripts/deploy/deploy-second-pc.sh

# Configuration
config-generate:
	@echo "âš™ï¸  Generating configurations..."
	python scripts/config/generate-mcp-configs.py

config-verify:
	@echo "âœ… Verifying configurations..."
	python scripts/config/verify-claude-config.py

# Maintenance
clean:
	@echo "ðŸ§¹ Cleaning build artifacts..."
	find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	find . -type f -name "*.pyc" -delete
	find . -type f -name "*.pyo" -delete
	find . -type f -name "*.pyd" -delete
	find . -type f -name ".coverage" -delete
	rm -rf htmlcov/
	rm -rf .pytest_cache/
	rm -rf build/
	rm -rf dist/
	rm -rf *.egg-info/

clean-all: clean
	@echo "ðŸ§¹ Deep cleaning..."
	rm -rf logs/*.log
	rm -rf .mypy_cache/
	rm -rf .tox/
	docker system prune -af

logs:
	@echo "ðŸ“‹ Viewing server logs..."
	tail -f logs/mcp_server_v2.log 2>/dev/null || echo "No log file found"

# Development helpers
dev-server:
	@echo "ðŸ”§ Starting development server..."
	python src/server/unified_mcp_v2.py --transport stdio

dev-server-http:
	@echo "ðŸ”§ Starting development server (HTTP)..."
	python src/server/unified_mcp_v2.py --transport http --port 3333

dev-test:
	@echo "ðŸ§ª Running development tests..."
	python tests/test_mcp_connection.py

# Documentation
docs-serve:
	@echo "ðŸ“š Serving documentation..."
	@echo "Documentation available in docs/ directory"
	@echo "Open docs/guides/GETTING_STARTED.md to begin"

# Quick commands
quick-start: setup test
	@echo "ðŸŽ‰ Quick start completed!"
	@echo "Run 'make dev-server' to start the server"

quick-test:
	@echo "âš¡ Quick test..."
	python tests/test_mcp_connection.py

# Environment info
info:
	@echo "â„¹ï¸  Environment Information"
	@echo "=========================="
	@echo "Python version: $$(python --version)"
	@echo "Pip version: $$(pip --version)"
	@echo "Docker version: $$(docker --version 2>/dev/null || echo 'Not installed')"
	@echo "Project root: $$(pwd)"
	@echo "Git branch: $$(git branch --show-current 2>/dev/null || echo 'Not a git repo')"

# Aliases for common tasks
start: dev-server
run: docker-run
tests: test
fmt: format

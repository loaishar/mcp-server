# Unified MCP Server Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# MCP Server API Keys (Auto-generated - keep secure!)
# =============================================================================
MCP_CURSOR_API_KEY=your_cursor_api_key_here
MCP_CLAUDE_API_KEY=your_claude_api_key_here
MCP_WINDSURF_API_KEY=your_windsurf_api_key_here

# =============================================================================
# External Service API Keys
# =============================================================================

# Supabase Configuration
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here

# GitHub Configuration
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_pat_here

# Figma Configuration
FIGMA_API_KEY=your_figma_api_key_here

# Sentry Configuration (Optional)
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# HyperBrowser Configuration
HYPERBROWSER_API_KEY=your_hyperbrowser_api_key_here

# =============================================================================
# Server Configuration
# =============================================================================
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=3333
MCP_SERVER_LOG_LEVEL=INFO

# =============================================================================
# Docker Configuration
# =============================================================================
COMPOSE_PROJECT_NAME=unified-mcp
DOCKER_BUILDKIT=1

# =============================================================================
# Production Configuration (Optional)
# =============================================================================
# NGINX_SSL_CERT_PATH=/path/to/ssl/cert.pem
# NGINX_SSL_KEY_PATH=/path/to/ssl/key.pem
# DOMAIN_NAME=your-domain.com

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=false
ENVIRONMENT=production
